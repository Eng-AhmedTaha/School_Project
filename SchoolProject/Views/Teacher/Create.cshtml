@model Teacher
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">


<div class="container mt-5">
    <h2 class="mb-4">Teacher Form</h2>
    <form method="post" enctype="multipart/form-data" asp-controller="Teacher" asp-action="Create">


        <div class="mb-3">
            <label asp-for="Name" class="form-label">Name</label>
            <input type="text" asp-for="Name" class="form-control" id="name" placeholder="Enter Name">
            <span asp-validation-for="Name" class="text-danger" style="color: red;"></span>

        </div>

        <div class="mb-3">
            <label asp-for="Age" class="form-label">Age</label>
            <input type="number" asp-for="Age" class="form-control" id="age" name="age" placeholder="Enter Age">
            <span asp-validation-for="Age" class="text-danger" style="color: red;"></span>

        </div>


        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>