@model IEnumerable<SchoolProject.Models.Course>

@{
    ViewData["Title"] = "Courses List";
}

<h2>Courses List</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Add New Course</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Teacher ID</th>
            <th>Course Capacity</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Name</td>
                <td>@course.TeacherId</td>
                <td>@course.CourseCapacity</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@course.CourseId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
