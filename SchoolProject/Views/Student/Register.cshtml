@model SchoolProject.ViewModels.RegisterViewModel

<h2>Register Student to Course</h2>

<form asp-action="Register" method="post">
    <div class="form-group">
        <label for="StudentId">Select Student</label>
        <select asp-for="StudentId" class="form-control" asp-items="@(new SelectList(Model.Students, "StudentId", "Name"))">
            <option value="">-- Select Student --</option>
        </select>
    </div>

    <div class="form-group">
        <label for="CourseId">Select Course</label>
        <select asp-for="CourseId" class="form-control" asp-items="@(new SelectList(Model.Courses, "CourseId", "Name"))">
            <option value="">-- Select Course --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
</form>
